<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/chie"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/chie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/email_log"
        style="@style/Edit_text"
        android:hint="email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chie"
        />

    <EditText
        android:id="@+id/password_log"
        style="@style/Edit_text"
        android:background="@drawable/edit_text"
        android:hint="Senha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_log"
        />

    <ImageView
        android:id="@+id/email_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_mail"
        app:layout_constraintEnd_toStartOf="@id/email_log"
        app:layout_constraintTop_toBottomOf="@id/chie" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_password"
        app:layout_constraintEnd_toStartOf="@id/password_log"
        app:layout_constraintTop_toBottomOf="@id/email_image" />
    
    <Button
        android:id="@+id/Enter_Button"
        style="@style/button"
        android:hint="Entrar"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="60sp"
        app:layout_constraintTop_toBottomOf="@id/password_log"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Esqueci"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/password_log"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="130sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_cadas"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/password_log"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="130sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>